<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
  	<div class='row'>
      <div class='col-md-8'>
        <div class="alert alert-<%= name == "notice" ? "success" : "danger" %>" role="alert">
          <a class="close" data-dismiss="alert">&#215;</a>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>