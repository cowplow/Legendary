<%= render 'shared_content/title', title: "All Villains" %>

<% Expansion.all.each do |expansion| %>
  <h3><%= link_to expansion.name, expansion_path(expansion) %></h3>

  <div class='row'>
    <div class='well col-md-6'>
      <ul>
    	 <% expansion.villains.each do |villain| %>
          <li><%= link_to villain.name, villain_path(villain) %></li>
    	 <% end %>
      </ul>
    </div>
  </div>

<% end %>