<%= render 'shared_content/title', title: "All Henchmen Groups" %>

<table class='table table-striped table-bordered'>
  <caption>All Henchmen ranked from easiest to toughest</caption>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Henchmen</th>
      <th>Player Win Rate</th>
      <th>Expansion</th>
    </tr>
  </thead>
  <tbody>
    <% 0.upto(@henchmen.length-1) do |x| %>
      <tr>
        <th scope="row"><%= x+1 %></th>
        <td><%= link_to @henchmen[x].name, henchman_path(@henchmen[x]) %></td>
        <td><%= @henchmen[x].show_henchmen_win_rate %>%</td>
        <td><%= @henchmen[x].expansion.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>