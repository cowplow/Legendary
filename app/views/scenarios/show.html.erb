<%= render 'shared_content/title', title: @scenario.name %>

<h4>Set: <%= link_to @scenario.expansion.name, expansion_path(@scenario.expansion) %></h4>

<h4>Description: <%= @scenario.description %></h4>

<table class='table table-striped table-bordered'>
  <caption>Stats for <%= @scenario.name %></caption>
  <thead>
    <tr>
      <th>Number of Players</th>
      <th>Games Played</th>
      <th>Win Rate</th>
    </tr>
  </thead>
  <tbody>
    <% 1.upto(5) do |x| %>
      <tr>
        <th scope="row"><%= x %></th>
        <td><%= @scenario.total_games_with_player(x) %></td>
        <td><%= @scenario.show_scenario_win_rate_with_player(x) %>%</td>
      </tr>
    <% end %>
    <tr>
      <th scope="row">Overall</th>
      <td><%= @scenario.total_games %></td>
      <td><%= @scenario.show_scenario_win_rate %></td>
    </tr>
  </tbody>
</table>