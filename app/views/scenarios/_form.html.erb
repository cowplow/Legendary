<%= render 'shared_content/error_messages', obj: @scenario %>

<p>
	<%= form_for @scenario do |f| %>
		<%= f.label :expansion %>
		<%= f.collection_select(:expansion_id, Expansion.all, :id, :name) %>
		<br/>
		<br/>

		<%= f.label :name %>
		<%= f.text_field :name %>

		<br/>
		<br/>


		<%= f.label :description %>
		<%= f.text_area :description %>

		<br/>
		<br/>

		<%= f.submit(@scenario.new_record? ? 'Create Scenario' : 'Update Scenario', class: "btn btn-info") %>


	<% end %>
</p>