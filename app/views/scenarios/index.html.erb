<%= render 'shared_content/title', title: "All Scenarios" %>

<table class='table table-striped table-bordered'>
  <caption>All Scenarios ranked from easiest to toughest</caption>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Scenario</th>
      <th>Player Win Rate</th>
      <th>Expansion</th>
    </tr>
  </thead>
  <tbody>
    <% 0.upto(@scenarios.length-1) do |x| %>
      <tr>
        <th scope="row"><%= x+1 %></th>
        <td><%= link_to @scenarios[x].name, scenario_path(@scenarios[x]) %></td>
        <td><%= @scenarios[x].show_scenario_win_rate %>%</td>
        <td><%= @scenarios[x].expansion.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>