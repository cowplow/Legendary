<%= render 'shared_content/title', title: @hero.name %>

<h4>Set: <%= link_to @hero.expansion.name, expansion_path(@hero.expansion) %></h4>

<br/>

<table class='table table-striped table-bordered'>
  <caption>Stats for <%= @hero.name %></caption>
  <thead>
    <tr>
      <th>Number of Players</th>
      <th>Games Played</th>
      <th>Win Rate</th>
    </tr>
  </thead>
  <tbody>
    <% 1.upto(5) do |x| %>
      <tr>
        <th scope="row"><%= x %></th>
        <td><%= @hero.total_games_with_player(x) %></td>
        <td><%= @hero.show_hero_win_rate_with_player(x) %>%</td>
      </tr>
    <% end %>
    <tr>
      <th scope="row">Overall</th>
      <td><%= @hero.total_games %></td>
      <td><%= @hero.show_hero_win_rate %>%</td>
    </tr>
  </tbody>
</table>
